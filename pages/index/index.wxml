<!-- 轮播图 -->
<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" width="355" height="150"/>
    </swiper-item>
  </block>
</swiper>
<!-- nav按钮 -->
<view class="page-nav">
  <view class="nav-item" wx:for="{{navBar}}" hover-class="tap-hover">
    <image class="img-item" src="{{item.imgIcon}}"></image>
    <view>{{item.navText}}</view>
  </view>
</view>
<!-- 首页产品图 -->
<view class="goods-img">
  <block wx:for="{{goodsImg}}">
    <view class="goods-wrp">
      <image class="goods-item" src="{{item}}"></image>
    </view>
  </block>
</view>
